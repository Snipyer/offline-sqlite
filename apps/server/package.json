{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs",
		"build:sidecar:linux": "bun build --compile --minify --target=bun-linux-x64 ./src/index.ts --outfile ../web/src-tauri/binaries/server-x86_64-unknown-linux-gnu",
		"build:sidecar:windows": "bun build --compile --minify --target=bun-windows-x64 ./src/index.ts --outfile ../web/src-tauri/binaries/server-x86_64-pc-windows-msvc.exe"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@offline-sqlite/api": "workspace:*",
		"@offline-sqlite/auth": "workspace:*",
		"@offline-sqlite/db": "workspace:*",
		"@offline-sqlite/env": "workspace:*",
		"@trpc/server": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@offline-sqlite/config": "workspace:*",
		"@types/bun": "catalog:",
		"tsdown": "^0.16.5",
		"typescript": "^5"
	}
}